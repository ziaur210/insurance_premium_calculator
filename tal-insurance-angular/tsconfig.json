{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true, // added
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    // "typeRoots": [
    //   "node_modules/@types"
    // ],
    "typeRoots": [
      "./typings"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [ // added
    "src/**/*"
  ],
  "exclude": [ // added
    "node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}